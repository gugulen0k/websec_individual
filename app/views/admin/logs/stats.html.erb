<div class="max-w-7xl mx-auto space-y-6">
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Статистика безопасности</h1>
        <p class="text-gray-600 mt-1">Анализ активности пользователей</p>
      </div>

      <%= link_to "← Вернуться к логам", admin_logs_path(date: @date), class: "px-4 py-2 bg-gray-100 text-gray-700 border border-gray-200 rounded-lg hover:bg-gray-200 transition-colors" %>
    </div>

    <%# Выбор даты %>
    <%= form_with url: stats_admin_logs_path, method: :get, class: "flex items-center gap-3 mb-6" do |f| %>
      <label class="text-sm font-medium text-gray-700">Дата:</label>
      <%= f.date_field :date, value: @date, class: "px-3 py-2 border border-gray-200 rounded-lg" %>
      <%= f.submit "Показать", class: "px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800" %>
    <% end %>

    <%# Основная статистика %>
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <div class="text-gray-600 text-sm mb-1">Всего событий</div>
        <div class="text-3xl font-semibold text-gray-900"><%= @statistics[:total_events] %></div>
      </div>

      <div class="bg-green-50 border border-green-200 rounded-lg p-4">
        <div class="text-gray-600 text-sm mb-1">Входов</div>
        <div class="text-3xl font-semibold text-green-600"><%= @statistics[:logins] %></div>
      </div>

      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <div class="text-gray-600 text-sm mb-1">Выходов</div>
        <div class="text-3xl font-semibold text-gray-600"><%= @statistics[:logouts] %></div>
      </div>

      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="text-gray-600 text-sm mb-1">Неудач. попыток</div>
        <div class="text-3xl font-semibold text-red-600"><%= @statistics[:failed_logins] %></div>
      </div>

      <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
        <div class="text-gray-600 text-sm mb-1">Несанкц. доступ</div>
        <div class="text-3xl font-semibold text-orange-600"><%= @statistics[:unauthorized_attempts] %></div>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 mb-8">
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="text-gray-600 text-sm mb-1">Уникальных пользователей</div>
        <div class="text-3xl font-semibold text-blue-600"><%= @statistics[:unique_users] %></div>
      </div>

      <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
        <div class="text-gray-600 text-sm mb-1">Уникальных IP адресов</div>
        <div class="text-3xl font-semibold text-purple-600"><%= @statistics[:unique_ips] %></div>
      </div>
    </div>

    <%# Активность по часам %>
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Активность по часам</h2>
      <div class="grid grid-cols-12 gap-2">
        <% (0..23).each do |hour| %>
          <% count = @statistics[:events_by_hour][hour] || 0 %>
          <% max_count = @statistics[:events_by_hour].values.max || 1 %>
          <% height_percent = (count.to_f / max_count * 100).round %>

          <div class="text-center">
            <div class="h-32 flex items-end justify-center">
              <div
                class="w-full bg-blue-500 rounded-t transition-all hover:bg-blue-600"
                style="height: <%= height_percent %>%"
                title="<%= hour %>:00 - <%= count %> событий"
              ></div>
            </div>
            <div class="text-xs text-gray-600 mt-1"><%= hour %></div>
          </div>
        <% end %>
      </div>
    </div>

    <%# Статистика за неделю %>
    <div>
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Активность за неделю</h2>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-3 px-4 font-medium text-gray-700">Дата</th>
              <th class="text-right py-3 px-4 font-medium text-gray-700">События</th>
              <th class="text-right py-3 px-4 font-medium text-gray-700">Входы</th>
              <th class="text-right py-3 px-4 font-medium text-gray-700">Неудачи</th>
              <th class="text-right py-3 px-4 font-medium text-gray-700">Польз.</th>
              <th class="text-right py-3 px-4 font-medium text-gray-700">IP</th>
            </tr>
          </thead>
          <tbody>
            <% @weekly_stats.each do |day| %>
              <tr class="border-b border-gray-100 hover:bg-gray-50">
                <td class="py-3 px-4 font-medium">
                  <%= link_to day[:date].strftime('%d.%m.%Y'), admin_logs_path(date: day[:date]), class: "text-blue-600 hover:underline" %>
                </td>
                <td class="py-3 px-4 text-right text-gray-900"><%= day[:stats][:total_events] %></td>
                <td class="py-3 px-4 text-right text-green-600"><%= day[:stats][:logins] %></td>
                <td class="py-3 px-4 text-right text-red-600"><%= day[:stats][:failed_logins] %></td>
                <td class="py-3 px-4 text-right text-gray-600"><%= day[:stats][:unique_users] %></td>
                <td class="py-3 px-4 text-right text-gray-600"><%= day[:stats][:unique_ips] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
